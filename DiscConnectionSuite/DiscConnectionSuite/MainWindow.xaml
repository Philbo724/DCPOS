<Window x:Class="DiscConnectionSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disc Connection Suite 0.1" Height="350" Width="525" Foreground="Black">

    <Grid>
        <PasswordBox x:Name="pwdPassword" HorizontalAlignment="Left" Margin="142,110,0,0" VerticalAlignment="Top" Width="120" TabIndex="1"/>
        <Label x:Name="lblLogin" Content="Password" HorizontalAlignment="Left" Margin="63,104,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="142,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsUndoEnabled="False" TabIndex="0"/>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="63,73,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="187,164,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnLogin_Click" TabIndex="3"/>

    </Grid>
</Window>
