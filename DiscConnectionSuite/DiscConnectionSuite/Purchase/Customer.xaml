<Window x:Class="DiscConnectionSuite.Purchase.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer" Height="397.854" Width="477.682">
    <Grid>
        <ComboBox x:Name="cbCustomers" HorizontalAlignment="Left" Margin="238,20,0,0" VerticalAlignment="Top" Width="211" SelectionChanged="cbCustomers_SelectionChanged" TabIndex="0"/>
        <Label Content="Customer:" HorizontalAlignment="Left" Margin="167,16,0,0" VerticalAlignment="Top"/>
